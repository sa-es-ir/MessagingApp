@inject MessagingApp.Services.IConversationService ConversationService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<div class="conversation-list">
    <div class="conversation-header">
        <h5>Conversations</h5>
        <button class="btn btn-sm btn-outline-primary" @onclick="StartNewConversation">
            <span class="bi bi-plus-circle"></span> New
        </button>
    </div>

    <div class="conversation-items">
        @if (conversations.Count == 0)
        {
            <div class="no-conversations">
                <p>No conversations yet</p>
                <small>Start a new conversation to begin chatting</small>
            </div>
        }
        else
        {
            @foreach (var conversation in conversations)
            {
                <div class="conversation-item @(IsActiveConversation(conversation.Id) ? "active" : "")"
                     @onclick="() => SelectConversation(conversation)">
                    <div class="conversation-title">@conversation.Title</div>
                    <div class="conversation-meta">
                        <span class="conversation-user">@conversation.UserName</span>
                        <span class="conversation-time">@FormatTime(conversation.LastMessageAt)</span>
                    </div>
                    <div class="conversation-preview">
                        @GetLastMessagePreview(conversation)
                    </div>
                </div>
            }
        }
    </div>
</div>

@code {
    private List<MessagingApp.Models.Conversation> conversations = new();
    private string? currentConversationId;

    protected override void OnInitialized()
    {
        // Subscribe for real-time updates
        ConversationService.ConversationsChanged += OnConversationsChanged;
        LoadConversations();
    }

    protected override void OnParametersSet()
    {
        LoadConversations();
    }

    private void OnConversationsChanged()
    {
        // Ensure UI update happens on the correct sync context
        InvokeAsync(() => LoadConversations());
    }

    private void LoadConversations()
    {
        conversations = ConversationService.GetAllConversations();
        StateHasChanged();
    }

    private void SelectConversation(MessagingApp.Models.Conversation conversation)
    {
        currentConversationId = conversation.Id;
        var url = $"/messaging?name={Uri.EscapeDataString(conversation.UserName)}&conversationId={conversation.Id}";
        NavigationManager.NavigateTo(url);
    }

    private void StartNewConversation()
    {
        NavigationManager.NavigateTo("/username");
    }

    private bool IsActiveConversation(string conversationId)
    {
        return currentConversationId == conversationId;
    }

    private string FormatTime(DateTime dateTime)
    {
        var now = DateTime.Now;
        var diff = now - dateTime;

        if (diff.TotalMinutes < 1)
            return "Just now";
        else if (diff.TotalMinutes < 60)
            return $"{(int)diff.TotalMinutes}m ago";
        else if (diff.TotalHours < 24)
            return $"{(int)diff.TotalHours}h ago";
        else if (diff.TotalDays < 7)
            return $"{(int)diff.TotalDays}d ago";
        else
            return dateTime.ToString("MMM dd");
    }

    private string GetLastMessagePreview(MessagingApp.Models.Conversation conversation)
    {
        var lastMessage = conversation.Messages.LastOrDefault();
        if (lastMessage == null)
            return "No messages yet";

        var preview = lastMessage.Text;
        if (preview.Length > 50)
            preview = preview.Substring(0, 50) + "...";

        return preview;
    }

    public void Dispose()
    {
        ConversationService.ConversationsChanged -= OnConversationsChanged;
    }
}

